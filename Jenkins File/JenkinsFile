pipeline {
    agent any


    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Sangameshwar-652/python-flask-app.git' 
            }
        }

        stage('Set up Python Environment') {
            steps {
                script {
                    // Create a virtual environment on the remote server
                    sh """
                    pip install -r requirements.txt
                    """
                }
            }
        }

    }
}
